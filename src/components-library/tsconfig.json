{
    "compilerOptions": {
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "noEmit": false,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "declaration": true,
      "declarationDir": "./dist/types",
      "emitDeclarationOnly": true,
      "outDir": "./dist",
      "plugins": [
        {
          "name": "next"
        }
      ],
      "paths": {
        "@/*": [
          "./src/*"
        ]
      }
    },
    "include": [
      "src/components/**/*",
      ".next/types/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      ".next"
    ]
  }